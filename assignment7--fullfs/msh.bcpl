import "io"
import "filesystem"
import "fsutils"

manifest {
    MAX_LINE_LENGTH = 256,
    FIRST_CHAR = 0,
    EOF_CHAR = 4
}

// msh: murrell shell
let start() be {
    let buf = vec MAX_LINE_LENGTH;

    {
        out("$ ");
        ins(buf, MAX_LINE_LENGTH);
    } repeatwhile buf ! FIRST_CHAR /= EOF_CHAR;
}
