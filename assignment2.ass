keyboard_interrupt_handler:
      peri  r11, r1
      jcond err, keyboard_input_error
      load  r1, 0
kih_loop:
      comp  r1, r11
      jcond geq, kih_done
      load  r2, r1
      ldch  r2, character_scratch
kih_backspace:
      comp r2, '\b'
      jcond neq, kih_delete
      call process_backspace
      jump kih_loop_maintenance
kih_delete:
      comp r2, 0x7f
      jcond neq, kih_clearline
      call process_backspace
      jump kih_loop_maintenance
kih_clearline:
      comp r2, 21
      jcond neq, kih_newline
      call process_clear_line
      jump kih_loop_maintenance
kih_newline:
      comp r2, '\n'
      jcond neq, kih_printable
      jump kih_print_store
kih_printable:
      comp r2, 32
      jcond lss, kih_loop_maintenance
      comp r2, 126
      jcond gtr, kih_loop_maintenance
      jump kih_print_store
kih_print_store:
      type r2
      load r0, r2
      load r3, [writeptr]
      stch r3, character_buffer
      inc r3
      mod r3, 512
      store r3, [writeptr]
kih_loop_maintenance:
      inc r1
      jump kih_loop
kih_done:
      iret
